# Скопируйте в .env: copy .env.example .env
# ВАЖНО: сгенерируйте свой SECRET_KEY перед публикацией!

# SECRET_KEY — сгенерировать: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-generate-your-own-key

# Локальная разработка: True. Продакшен: False
DEBUG=True

# Хосты через запятую. Продакшен: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Render.com — добавляется автоматически при деплое
# DATABASE_URL=postgres://... (от PostgreSQL в Render)
# RENDER=True

# Для продакшена с HTTPS (раскомментировать):
# DEBUG=False
# SECURE_SSL_REDIRECT=True
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
